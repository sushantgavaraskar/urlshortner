# Environment Mode
NODE_ENV=development

# Server Configuration
PORT=5000

# MongoDB Configuration (Development URI)
MONGODB_URI=mongodb://admin:password123@localhost:27017/smartshort?authSource=admin

# CORS Configuration (Development frontend URL)
CORS_ORIGIN=http://localhost:3000

# Base URL for short links (Development backend URL)
BASE_URL=http://localhost:5000

# AI Model Configuration
AI_MODEL_CACHE_DIR=./models
AI_SUMMARY_MAX_LENGTH=150
AI_SUMMARY_MIN_LENGTH=30

# Rate Limiting (Development settings - more lenient)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging (Development settings)
LOG_LEVEL=debug
LOG_TO_FILE=false

# Security (Development secrets)
SESSION_SECRET=dev_session_secret_key_here
JWT_SECRET=dev_jwt_secret_key_here

# Performance and Monitoring (Development settings)
ENABLE_COMPRESSION=false
ENABLE_CACHE=false
CACHE_TTL=300
ENABLE_MONITORING=false

# Optional: External Services (Development API keys)
# GEOIP_API_KEY=your_geoip_api_key
# ANALYTICS_API_KEY=your_analytics_api_key
# SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Database Connection Pool (Development settings)
DB_POOL_SIZE=5
DB_POOL_TIMEOUT=10000
DB_POOL_IDLE_TIMEOUT=10000 